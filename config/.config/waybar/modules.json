{
    "custom/arch": {
        "format": "󰣇",
        "tooltip": true,
        "tooltip-format": "btw"
    },
    // Workspaces
//    "hyprland/workspaces": {
//        "on-scroll-up": "hyprctl dispatch workspace r-1",
//        "on-scroll-down": "hyprctl dispatch workspace r+1",
//        "on-click": "activate",
//        "active-only": false,
